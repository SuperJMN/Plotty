<UserControl
    x:Class="Plotty.Uwp.Views.CLangView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:monaco="using:Monaco"
    xmlns:uwp="using:Plotty.Uwp"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance uwp:CLangCodingViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <monaco:CodeEditor Grid.Row="0" CodeLanguage="c" Text="{Binding Source, Mode=TwoWay}" BorderBrush="Gray"
                           BorderThickness="1">
        </monaco:CodeEditor>
        <monaco:CodeEditor  Grid.Row="1" Text="{Binding AsmSource, Mode=TwoWay}" BorderBrush="Gray"
                               BorderThickness="1">
        </monaco:CodeEditor>
        
    </Grid>
</UserControl>
